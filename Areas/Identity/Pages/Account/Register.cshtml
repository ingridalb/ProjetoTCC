@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="mask d-flex align-items-center h-100">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card-cad" style="border-radius: 15px;">
                            <div class="card-body p-5 mb-3"> 
                                <h2 class="text-uppercase text-center mb-4 uppercaseUser">Crie uma conta</h2>

                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"> 
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-outline mb-4"> <!--NOME COMPLETO-->
                                        <label asp-for="Input.NomeCompleto" class="form-label">Insira seu nome completo</label>
                                        <input asp-for="Input.NomeCompleto" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.NomeCompleto" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.Email" class="form-label">Insira seu email</label>
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.Password" class="form-label">Insira uma senha</label>
                                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirme a senha</label>
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div>
                                        <div class="form-check mb-3">
                                            <input asp-for="Input.AceitouTermos" class="form-check-input" />
                                            <label asp-for="Input.AceitouTermos" class="form-check-label">
                                                Eu concordo com os <a href="/termos" target="_blank">Termos de Serviço</a>
                                            </label>
                                            <span asp-validation-for="Input.AceitouTermos" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="d-grid mt-3">
                                        <button id="registerSubmit" type="submit">Registrar</button>
                                    </div>

                                    <div class="d-flex justify-content-center mt-3">
                                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Já tem uma conta? Fazer login</a>
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}