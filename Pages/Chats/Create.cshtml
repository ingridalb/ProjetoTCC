@page
@model MaoSolidaria.Pages.Chats.CreateModel
@{
    ViewData["Title"] = "Enviar Mensagem";
}

<h2>Enviar Mensagem</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Chat.RemetenteId"></label>
        <input asp-for="Chat.RemetenteId" class="form-control" />
        <span asp-validation-for="Chat.RemetenteId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Chat.DestinatarioId"></label>
        <input asp-for="Chat.DestinatarioId" class="form-control" />
        <span asp-validation-for="Chat.DestinatarioId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Chat.ConteudoMensagem"></label>
        <textarea asp-for="Chat.ConteudoMensagem" class="form-control"></textarea>
        <span asp-validation-for="Chat.ConteudoMensagem" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
