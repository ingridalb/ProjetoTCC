@page "{id:int}"
@model MaoSolidaria.Pages.Postagens.EditModel
@{
    ViewData["Title"] = "Editar Postagem";
}

<h2>Editar Postagem</h2>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Postagem.Id" />
    <input type="hidden" name="ImagemAntiga" value="@Model.Postagem.CaminhoImagem" />

    <div class="form-group">
        <label asp-for="Postagem.Texto" class="form-label"></label>
        <textarea asp-for="Postagem.Texto" class="form-control"></textarea>
        <span asp-validation-for="Postagem.Texto" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label class="form-label">Imagem Atual</label><br />
        <img src="@(string.IsNullOrEmpty(Model.Postagem.CaminhoImagem)
    ? "/img/avatar-padrao.png"
    : Model.Postagem.CaminhoImagem)"
             alt="Imagem da postagem"
             class="img-thumbnail"
             style="max-height: 200px;" />
    </div>

    <div class="form-group mt-3">
        <label>Nova Imagem (opcional)</label>
        <input type="file" name="ImagemPostagem" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Salvar</button>
    <a asp-page="/PaginaUser/PostagensUser" class="btn btn-secondary mt-3">Cancelar</a>
</form>