@page
@model MaoSolidaria.Pages.Postagens.CreateModel
@{
    ViewData["Title"] = "Criar Postagem";
}

<h2>Criar Postagem</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Postagem.Texto">Texto</label>
        <textarea asp-for="Postagem.Texto" class="form-control"></textarea>
        <span asp-validation-for="Postagem.Texto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Imagem da Postagem</label>
        <input type="file" name="ImagemPostagem" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>