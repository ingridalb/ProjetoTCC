@page
@model MaoSolidaria.Pages.Postagens.IndexModel

<h2>Postagens</h2>

<p><a asp-page="Create" class="btn btn-success">Nova Postagem</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Conteúdo</th>
            <th>Data</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Postagens)
        {
            <tr>
                <td>Postagem</td>
                <td>@item.Texto</td>
                <td>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                    <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
