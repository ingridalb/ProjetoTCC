@page
@model MaoSolidaria.Pages.PaginaUser.PerfilUserModel
@{
}
<div class="perfil-container container rounded bg-white mt-5 mb-5 d-flex justify-content-center align-items-center">
    <div class="row w-100">
        <div class="col-md-12">
            <h2 class="text-center" id="perfil-topo">Editar informações</h2>
            
            <div class="perfil-info d-flex flex-column align-items-center text-center">
                <img id="perfil-imagem" class="rounded-circle mt-3" width="150px" src="https://static.vecteezy.com/system/resources/previews/009/292/244/non_2x/default-avatar-icon-of-social-media-user-vector.jpg" alt="Imagem do usuário">
                <span id="perfil-nome" class="font-weight-bold">Nome do usuário</span>
                <span id="perfil-email" class="text-black-50">usuario@gmail.com</span>
            </div>

            <form>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="Nome" value="">
                    </div>

                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="text" class="form-control" value="" placeholder="Sobrenome">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="tel" class="form-control" placeholder="Telefone" value="">
                    </div>

                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="email" class="form-control" placeholder="Email" value="">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="CEP" value="">
                    </div>

                    <div class="col-md-6">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="Cidade" value="">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="Bairro" value="">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="Endereço" value="">
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-md-12">
                        <label class="labels"></label>
                        <input type="text" class="form-control" placeholder="Ponto de Referência" value="">
                    </div>
                </div>
            </form>
        </div>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <button type="submit" id="btnSalvar" class="btn btn-block btn-lg text-body">
                Salvar alterações
            </button>
            <button type="button" id="btnGeral" class="btn btn-block btn-lg text-body" onclick="window.history.back();">
                Cancelar
            </button>
        </div>

    </div>
</div>